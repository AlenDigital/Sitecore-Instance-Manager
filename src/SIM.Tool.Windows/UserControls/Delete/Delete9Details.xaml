<UserControl x:Class="SIM.Tool.Windows.UserControls.Install.Delete9Details" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converters="clr-namespace:SIM.Tool.Base.Converters;assembly=SIM.Tool.Base"
             xmlns:install="clr-namespace:SIM.Tool.Windows.UserControls.Install"
             mc:Ignorable="d" d:DesignWidth="623.837" Background="#FFF5F3F3" Height="133.662">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="72" />
            <ColumnDefinition Width="60*" />
            <ColumnDefinition Width="77" />
            <ColumnDefinition Width="61*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0" />
            <RowDefinition Height="28"/>
            <RowDefinition Height="26" />
            <RowDefinition Height="25" />
            <RowDefinition Height="5*"/>
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Product: " HorizontalAlignment="Left" Width="72" Grid.RowSpan="2" />
        <TextBox Grid.Row="0" Grid.Column="1" Name="ProductName" Grid.RowSpan="2" IsReadOnly="True" Margin="0,0,10,0" /> 
        <TextBlock Grid.Row="2" Text="Site Name: " HorizontalAlignment="Left" Width="72" />
        <TextBox IsReadOnly="True" Grid.Row="2" Grid.Column="1" Name="InstanceName" Margin="0,0,10,0"   />

        <TextBlock Grid.Column="2" Grid.Row="2" TextWrapping="Wrap" Text="Solr URL:" HorizontalAlignment="Left" Width="77"/>
        <TextBlock Grid.Column="2" Grid.Row="3" TextWrapping="Wrap" Text="Solr root:" HorizontalAlignment="Left" Width="49"/>
        <Button Content="..." Grid.Column="2" Click="PickLocationFolder" Grid.Row="3" HorizontalAlignment="Right" Width="23"/>
        <TextBox Name="solrRoot" Grid.Column="3" Grid.Row="3" TextWrapping="Wrap" />
        <TextBox Grid.Column="3" Grid.Row="2" TextWrapping="Wrap" Name="solrUrl"/>
        <TextBlock Grid.Column="2" Grid.Row="1" TextWrapping="Wrap" Text="Solr service:" HorizontalAlignment="Left" Width="77"/>
        <TextBox Name="SolrService" Grid.Column="3" Grid.Row="1" TextWrapping="Wrap" Text=""/>
        <CheckBox Name="scriptsOnly" Content=":Scripts only" HorizontalAlignment="Left" Margin="0,5,0,0" Grid.Row="3" VerticalAlignment="Top" FlowDirection="RightToLeft" Grid.ColumnSpan="2" Width="93" Padding="11,-1,0,0"/>
    </Grid>
</UserControl>
